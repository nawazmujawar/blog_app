
<%- include('partials/header') %> 

<div class="ui main text container">
    <div class="ui huge header">Restfull Blog App</div>
    <div class="ui attached blog segment">
        <% blogs.forEach(blog => { %>
        <div class="ui divided items">
            <div class="item">
                <div class="image">
                    <img src="<%= blog.image %> " alt="">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %> " ><%= blog.title %> </a>
                <div class="meta">
                    <span><%= blog.created.toDateString() %> </span>
                </div>
                <div class="description">
                    <p><%- blog.body.substr(0,100)%>.... </p>
                </div>
                <div class="extra">
                    <a class="ui floated basic violet button " href="/blogs/<%= blog._id %> " >
                    Read more
                        <i class="right chevron icon"></i>
                </a>
                </div>    
            </div>

            </div>
            <% }); %> 
        </div>
    </div>    
</div>



<%- include('partials/footer') %> 